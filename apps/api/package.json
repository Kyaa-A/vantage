{
  "name": "api",
  "version": "0.1.0",
  "description": "FastAPI backend for Vantage application",
  "private": true,
  "scripts": {
    "dev": "uv run uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "echo 'Python build completed'",
    "test": "uv run pytest -v --tb=short",
    "test:cov": "uv run pytest --cov=app --cov-report=term-missing --cov-report=html",
    "lint": "uv run ruff check .",
    "format": "uv run ruff format . && uv run ruff check --fix .",
    "check": "npm run lint && npm run type-check",
    "type-check": "uv run mypy .",
    "migrate": "uv run alembic upgrade head"
  }
} 